package seminario1;

/**
 *
 * @author carlota
 */
public class Controlador {
    private BaseDatos base;
    private Vista vista;
    
    public Controlador(Vista vista, BaseDatos base){
        this.base = base;
        this.vista = vista;
        this.vista.setControlador(this);
        this.vista.setVisible(true);
    }
    
    public void Desconectar(){
        this.base.cerrarConexion();
    }
    
}
